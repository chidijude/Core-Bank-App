@model Express.Core.Models.AccountConfiguration

@{
    ViewBag.Title = "EditLoan";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Loan Account Configuration</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.IsBusinessOpen)
        @Html.HiddenFor(model => model.FinancialDate)

        @Html.HiddenFor(model => model.CurrentCot)
        @Html.HiddenFor(model => model.CurrentCotIncomeGlID)
        @Html.HiddenFor(model => model.CurrentInterestExpenseGlID)
        @Html.HiddenFor(model => model.CurrentCreditInterestRate)
        @Html.HiddenFor(model => model.CurrentMinimumBalance)

        @Html.HiddenFor(model => model.SavingsCreditInterestRate )
        @Html.HiddenFor(model => model.SavingsMinimumBalance )
        @Html.HiddenFor(model => model.SavingsInterestExpenseGlID )
        @Html.HiddenFor(model => model.SavingsInterestPayableGlID )

        <div class="form-group">
            @Html.LabelFor(model => model.LoanDebitInterestRate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoanDebitInterestRate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoanDebitInterestRate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoanInterestIncomeGlID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LoanInterestIncomeGlID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoanInterestIncomeGlID, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.LoanInterestExpenseGLID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LoanInterestExpenseGLID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoanInterestExpenseGLID, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.LoanInterestReceivableGlID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LoanInterestReceivableGlID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoanInterestReceivableGlID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}

<div class="col-md-offset-2 col-md-10">
    @Html.ActionLink("Back", "Details", new{}, new {@class="btn btn-primary"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}