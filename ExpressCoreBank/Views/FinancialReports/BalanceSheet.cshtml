@{
    ViewBag.Title = "BalanceSheet";
}

<div id="page-wrapper">
    <h1 class="text-center" style="color:darkcyan">Balance Sheet (JUCBA)</h1>

    <table class="table table-bordered">
        <tr>
            <th>
                Account
            </th>
            <th>
                Amount
            </th>
        </tr>
        <tr>
            <td style="background-color: darkcyan;  border: 1px solid black;"><b style="color:white">Asset</b></td>
            <td style="background-color: darkcyan;  border: 1px solid black;"><b style="color:white">N</b></td>
        </tr>
        @foreach (var item in ViewBag.Assets as List<Express.Core.Models.GlAccount>)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @item.AccountBalance.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)
                </td>
            </tr>
        }
        <tr>
            <th style="background-color: darkslategrey;  border: 1px solid black;"><b style="color:white">Total</b></th>
            <th style="background-color: darkslategrey;  border: 1px solid black;"><b style="color:white">@ViewBag.AssetSum.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)</b></th>
        </tr>
        <tr></tr></table>
        
        
